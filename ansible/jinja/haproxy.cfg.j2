global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    option tcplog
    option dontlognull
    timeout connect 5000ms
    timeout client  50000ms
    timeout server  100000ms

# Frontend configuration
frontend http_front
    bind *:80
    mode http
    acl is_wordpress path_beg /wordpress
    acl is_nextcloud path_beg /nextcloud

    use_backend wordpress_backend if is_wordpress
    use_backend nextcloud_backend if is_nextcloud

    default_backend wordpress_backend  # Default to WordPress if no match

# Backend configuration for WordPress
backend wordpress_backend
    mode http
    balance roundrobin
    option forwardfor
    http-request set-header X-Forwarded-Proto https if { ssl_fc }
    http-request set-path %[path,regsub(^/wordpress/,/)]
    server wordpress_private 10.2.10.38:80 check

# Backend configuration for Nextcloud
backend nextcloud_backend
    mode http
    balance roundrobin
    option forwardfor
    http-request set-header X-Forwarded-Proto https if { ssl_fc }
    http-request set-path %[path,regsub(^/nextcloud/,/)]
    server nextcloud_private 10.2.10.247:80 check
